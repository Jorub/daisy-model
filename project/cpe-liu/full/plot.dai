(defunit [m^2/m^2] [none])

(defgnuplot LAI time
  (title "LAI All years")
  (where "fig/LAI.pdf")
  (ymin 0 [m^2/m^2])
  (ymax 6 [m^2/m^2])
  (begin 2009 6 1 0)
  (extra &old 
         [set format x "%y"])
  (source (column (file "crop_prod.dlf")
                  (tag "Crop AI")
                  (title "Daisy CAI")
                  (dimension [m^2/m^2]))
          (column (file "crop_prod.dlf")
                  (tag "Leaf AI")
                  (title "Daisy LAI")
                  (dimension [m^2/m^2]))
          ;;(column (file "crop.dlf")
          ;;        (tag "LAI")
          ;;        (title "Daisy LAI2"))
          (column (file "LAI.ddf")
                  (tag "LAI")
                  (style 3)
                  (title "RVI"))
          ))

(defgnuplot LAI_year LAI
  (extra &old 
         [set format x "%m"])
  (y2min 0 [])
  (y2max 1 [])
  (source &old 
          (column (file "crop_prod.dlf")
                  (style 4)
                  (tag "water_stress")
                  (title "WS"))
          (column (file "crop_prod.dlf")
                  (style 5)
                  (tag "nitrogen_stress")
                  (title "NS"))
;;          (column (file "crop_prod.dlf")
;;                  (style 4)
;;                  (tag "DS"))
          ))

